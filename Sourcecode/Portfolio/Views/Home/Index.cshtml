
@{
    ViewBag.Title = "Alisson Rubim - Developer and Designer";
}

<style>
    body{
       padding:0px;
       font-family: 'Abel', sans-serif;
    }

    /* Global */
    .rotate-45 {
        -webkit-transform: rotate(45deg);
        -moz-transform: rotate(45deg);
        -o-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);
    }

    .full-with {
        width: 100%;
    }

    .parallax {
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .container {
        max-width: 700px;
    }

    .center-text {
        text-align: center;
    }

    /* #header */
    #header {
        color: white;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.06);
        background-color: #dadada;
        background-image: url("../../Content/img/header_bg.jpg");
        height: 400px;
    }

    #header .wrapper{
        background-color: rgba(0, 0, 0, 0.42);
        padding: 25px;
        width: 100%;
        height: 100%;
    }

    #header .picture-box{
        width: 150px;
        height: 150px;
        border: 1px dashed white;
        margin: 0px auto;
        margin-top: 60px;
        margin-bottom: 40px;
    }

    #header .profile-name {
        width: 200px;
        margin: 0 auto;
        text-align: center;
        font-size: 33px;
        font-weight: bold;
    }

    #header .profile-subject {
        width: 250px;
        margin: 0 auto;
        text-align: center;
        font-size: 20px;
        margin-bottom: 5px;
    }
    
    #header .social-links{
        font-size: 24px;
        text-align: center;
        position: absolute;
        right: 30px;
        top: 30px;
    }

    #header .social-links a {
        color: white;
    }

    #header .social-links i {
        cursor: pointer;
    }

    #header .social-links i:hover {
        color: #c1c1c1;
    }

    /* scope */
    section.block {
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.24);
        z-index: 9999;
        position: relative;
        padding: 40px 0;
    }

    header h6 {
        font-size: 24px;
        color: rgb(103, 103, 103);
        text-align: center;
    }

    header {
        margin-bottom: 20px;
    }

    .separator-dash {
        height: 4px;
        border-bottom: 1px dashed #d2d2d2;
        margin-left: 20px;
        margin-right: 20px;
    }

    .separator-gradient {
        border: 0;
        height: 1px;
        /*background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgb(66, 155, 187), rgba(0, 0, 0, 0));*/
        border-bottom: 1px dashed #a0a0a0;
    }

    /* .project */
    .project {
       display: table;
    }

    .project .project-picute{
        width: 370px;
        height: 260px;
        overflow: hidden;
        box-shadow: 0px 0px 10px -2px #c1c1c1;
        margin-bottom: 20px;
        display: table-cell;
        transition: 0.2s;
        cursor: pointer;
    }

    .project .project-picute:hover {
         transform: rotate(2deg);
    }

    .project-description {
        padding: 0 20px;
        display: table-cell;
        vertical-align: top;
    }

    .project .project-picute img{
        width: 100%;
    }

    #background-1 {
        background-image: url("../../Content/img/bg1.jpeg");
        height: 400px;
    }

    #background-1 .wrapper{
        background-color: rgba(0, 0, 0, 0.42);
        padding: 25px;
        width: 100%;
        height: 100%;
    }
</style>


